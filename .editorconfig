# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
tab_width = 4
max_line_length = off

[**.scss]
tab_width = 2

[**.js]
tab_width = 4

[**.coffee]
tab_width = 4

[**.cson]
tab_width = 4

[**.json]
tab_width = 4

[**rc]
tab_width = 4

[**php]
tab_width = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

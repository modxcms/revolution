<?xml version="1.0" encoding="UTF-8" ?>
<docblox>
    <title>MODX API Documentation</title>
    <force />
    <parser>
        <target>./docs/build/</target>
        <markers>
        <item>TODO</item>
        <item>FIXME</item>
        </markers>
        <extensions>
        <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>./docs/build/</target>
    </transformer>
    <files>
        <directory>../core/model/modx/</directory>
        <directory>../core/xpdo/</directory>
        <directory>../manager/controllers/default/</directory>
    </files>
    <logging>
        <level>warn</level>
        <paths>
        <default>./docs/log/{DATE}.errors.log</default>
        </paths>
    </logging>
    <transformations>
        <template name="default" />
    </transformations>
    <ignore>*.inc</ignore>
    <ignore>*.cache.php</ignore>
    <ignore>core/model/modx/mail/phpmailer/*</ignore>
    <ignore>core/xpdo/json/*</ignore>
    <ignore>core/xpdo/compression/pclzip.lib.php</ignore>
    <!-- for now ignore processors -->
    <ignore>core/model/modx/processors/*</ignore>
</docblox>
